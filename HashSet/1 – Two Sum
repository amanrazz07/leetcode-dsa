// LeetCode 1
// Two Sum
// Topic: Hashing (HashMap)
// Difficulty: Easy
// Time Complexity: O(n)
// Space Complexity: O(n)

import java.util.*;

class Solution {

    public int[] twoSum(int[] nums, int target) {

        int n = nums.length;
        HashMap<Integer, Integer> map = new HashMap<>();

        for (int i = 0; i < n; i++) {

            int diff = target - nums[i];

            if (map.containsKey(diff))
                return new int[]{map.get(diff), i};

            map.put(nums[i], i);
        }

        return new int[]{};
    }
}
